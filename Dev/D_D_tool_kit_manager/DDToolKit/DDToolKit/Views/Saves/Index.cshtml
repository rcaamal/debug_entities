@model IEnumerable<DDToolKit.Models.Save>
@{
    ViewBag.Title = "Index";
}
<body style="background-image:url('/Content/Wallpapers/featured-magic-setting.png');
    background-repeat: no-repeat;
    background-size: cover;
    ">
    <div style="background-color:antiquewhite">
        <h2>Index</h2>
        <p>
            <button>@Html.ActionLink("Create New Save Game", "Create")</button>


        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.ActionLink("Add a character to this save", "CreatePlayer", new { id = item.ID })
                    </td>
                    <td>
                        @Html.ActionLink("Create a map for this save", "MapSetup", new { id = item.ID })
                    </td>
                    <td>
                        @Html.ActionLink("Manage maps", "Manage", "Maps", new { id = item.ID }, null)
                    </td>
                    <td>
                        <button onclick="myEditFunction()" class="button button">
                            @Html.ActionLink("Edit", "Edit", new { id = item.ID })
                        </button>
                        <style>

                            .button {
                                display: inline-block;
                                padding: 5px 10px;
                                font-size: 9px;
                                cursor: pointer;
                                text-align: center;
                                text-decoration: none;
                                outline: none;
                                border: none;
                                border-radius: 50%;
                                box-shadow: 0 5px #999;
                            }

                                .button:hover {
                                    background-color: #000000
                                }

                                .button:active {
                                    background-color: #ffffff;
                                    box-shadow: 0 5px #666;
                                    transform: translateY(4px);
                                }
                        </style>
                    </td>
                </tr>

            }
        </table>
    </div>
</body>


<style>
</style>
<script>
function myEditFunction() {
    alert("Do you want to edit this item?");
}
</script>
